<resources>

    <style name="ScoreboardTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:color">@color/primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="ScoreboardDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:color">@color/primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style
        name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar" >
        <item name="android:background"> @color/primary </item>
        <item name="android:title">@string/empty_string</item>
    </style>

    <color name="primary">#ff67cbff</color>
    <color name="primary_dark">#ff58aedb</color>
    <color name="accent">#00202B</color>
    <color name="text_primary">#000000</color>

</resources>
