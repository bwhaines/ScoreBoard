<resources>

    <style name="ScoreboardTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="ScoreboardDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style
        name="MyActionBar" parent="@android:style/Theme.Material.Light.DarkActionBar" >
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <color name="primary">#ff67cbff</color>
    <color name="primary_dark">#ff58aedb</color>
    <color name="accent">#00202B</color>
    <color name="text_primary">#000000</color>

</resources>
